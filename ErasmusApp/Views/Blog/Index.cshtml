@model List<ErasmusApp.Models.Blog>
@{
    ViewBag.Title = "Blog";
}


<!-- Start banner Area -->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container box_1170">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                   News
                </h1>
                <p class="text-white link-nav">
                    <a href="@Url.Action("Index","Home")">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="@Url.Action("Index","Blog")">
                       News
                    </a>
                </p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<div class="main-body section-gap">
    <div class="container box_1170">
        <div class="row">
            <div class="col-lg-12 post-list">
                <!-- Start Post Area -->
                <section class="post-area">
                    <div class="row">
                        @foreach (var blog in Model)
                        {
                            <div class="col-lg-4 col-md-4">
                                <div class="single-post-item">
                                    <div class="post-thumb">
                                        <img class="img-fluid" src="~/Uploads/Blogs/@blog.Photo" alt="">
                                    </div>
                                    <div class="post-details">
                                        <h4><a href="@Url.Action("BlogDetail","Blog" ,new { id= blog.Id,slug=blog.Slug })">@blog.Title</a></h4>
                                        <p>
                                            @blog.ShortDesc
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>