@model List<ErasmusApp.Models.Partner>
@{
    var counter = 1;
}

<!-- Start banner Area -->
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container box_1170">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                   Partners
                </h1>
                <p class="text-white link-nav">
                    <a href="@Url.Action("Index","Home")">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="@Url.Action("Index","Partner")">
                        Partners
                    </a>
                </p>
            </div>
        </div>
    </div>
</section>
<!-- Start main body Area -->
<div class="main-body section-gap">
    <div class="container box_1170">
        <div class="row">
            <div class="col-lg-12 post-list">
                <!-- Start Post Area -->
                <section class="post-area">
                    <div class="row">
                        @foreach (var partner in Model)
                        {

                            if (counter % 2 == 0)
                            {
                                <div class="section-top-border w-100 text-right">
                                    <h3 class="mb-30">@partner.Name</h3>
                                    <div class="row">
                                        <div class="col-md-9 mt-sm-20">
                                            <p>
                                                @partner.Description
                                            </p>
                                        </div>
                                        <div class="col-md-3">
                                            <img src="~/Uploads/Partners/@partner.Photo" alt="" class="img-fluid">
                                        </div>
                                        <div class="col-12">
                                            <div class="single-contact-address justify-content-end d-flex flex-row">
                                                <div class="icon" style="margin-right:5px;">
                                                    <span class="lnr lnr-home"></span>
                                                </div>
                                                <div class="contact-details">
                                                    <h5>@partner.Address</h5>
                                                    <p>@partner.WebSite</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="section-top-border w-100">
                                    <h3 class="mb-30">@partner.Name</h3>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img src="~/Uploads/Partners/@partner.Photo" alt="" class="img-fluid">
                                        </div>
                                        <div class="col-md-9 mt-sm-20">
                                            <p>
                                                @partner.Description
                                            </p>
                                        </div>
                                        <div class="col-12">
                                            <div class="single-contact-address  d-flex flex-row">
                                                <div class="icon" style="margin-right:5px;">
                                                    <span class="lnr lnr-home"></span>
                                                </div>
                                                <div class="contact-details">
                                                    <h5>@partner.Address</h5>
                                                    <p>@partner.WebSite</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            counter++;
                        }
                    </div>
                </section>
                <!-- Start Post Area -->
            </div>
        </div>
    </div>
</div>
<!-- Start main body Area -->